import { useRef } from "react";

function App() {
  const inputRef = useRef();

  function showValue() {
    alert(inputRef.current.value);
  }

  return (
    <div>
      <input type="text" ref={inputRef} />
      <button onClick={showValue}>Show Value</button>
     
    </div>
  );
}

export default App;


